.container
  %h2.text-center {{ category.name }}
  .col-sm-4.col-sm-push-8
    %a(ng-href="{{category.image}}")
      %img.center-block(ng-src="{{category.thumb}}")
    %p
  .col-sm-8.col-sm-pull-4
    %p {{ category.description }}
    %p
    .col-md-6
      %h3(ng-if="instructors.length") Instructors
      %ng-include(src="'instructor_list.html'")
    .col-md-6
      %h3(ng-if="courses") Courses
      %ng-include(src="'courses_list.html'")
  
