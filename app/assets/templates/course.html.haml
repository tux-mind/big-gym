.container
  .page-header.text-center
    %h1 {{ course.name }}
  .row
    .col-sm-4.col-sm-push-8
      %a(ng-href="{{course.image}}")
        %img.center-block(ng-src="{{course.thumb}}")
    .col-sm-8.col-sm-pull-4
      %p {{ course.description }}
  .row
    .col-md-8
      .col-md-6(ng-if="instructors")
        %h3 Instructors
        %ng-include(src="'instructor_list.html'")
      .col-md-6
        %h3 Schedules
        %ul(ng-model="schedules" ng-if="schedules")
          %li(ng-repeat="s in schedules")
            from {{ s.from }} to {{ s.to }}
    .col-md-4.text-center
      %h4(ng-if="room")
        Held in {{ room.name }}
      %a(ng-href="#/rooms/{{room.id}}" ng-if="room")
        %img(ng-src="{{room.image}}")
      %ng-include(src="'images.html'")

