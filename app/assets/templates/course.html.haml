.container
  .page-header.text-center
    %h1 {{ course.name }}
  .col-md-8
    %p {{ course.description }}
    .col-md-6(ng-if="instructors")
      %h3 Instructors
      %ng-include(src="'instructor_list.html'")
    .col-md-6
      %h3 Schedules
      %ul(ng-model="schedules" ng-if="schedules")
        %li(ng-repeat="s in schedules")
          from {{ s.from }} to {{ s.to }}
  .col-md-4
    %a(ng-href="{{course.image}}")
      %img(ng-src="{{course.thumb}}")
    %h3(ng-if="room")
      Room
    %ng-include(src="'images.html'")

