.container-fluid
  #home-carousel.carousel.slide(data-ride="carousel" ng-non-bindable)
    %ol.carousel-indicators
      %li.active(data-target="#home-carousel" data-slide-to="0")
      %li(data-target="#home-carousel" data-slide-to="1")
      %li(data-target="#home-carousel" data-slide-to="2")
    .carousel-inner(role="listbox")
      .item.active
        %img(src="img/carousel0.png")
      .item
        %img(src="img/carousel1.png")
      .item
        %img(src="img/carousel2.png")
    %a.left.carousel-control(data-target="#home-carousel" role="button" data-slide="prev")
      %span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
      %span.sr-only Previous
    %a.right.carousel-control(data-target="#home-carousel" role="button" data-slide="next")
      %span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
      %span.sr-only Next
